<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.xiaodao.system.mapper.SysTestMapper">

    <!-- 可根据自己的需求，是否要使用 -->
    <resultMap type="com.xiaodao.system.entity.SysTest" id="BaseResultMap">
        <result property="id" column="id"/>
        <result property="name" column="name"/>
    </resultMap>


    <!--数据库表的基本查询列名集合 -->
    <sql id="Base_Column_List">
        id ,
        name 
    </sql>


    <!--Where子句 -->
    <sql id="Base_Query_Where">
         <if test="sysTest.id != null">
            and id = #{sysTest.id,jdbcType=BIGINT}
         </if>
         <if test="sysTest.name != null">
            and name = #{sysTest.name,jdbcType=VARCHAR}
         </if>
    </sql>




    <!--基本更新字段-->
    <sql id="Base_Update_Column">
        <set>
          <if test="sysTest.id != null">
             id = #{sysTest.id,jdbcType=BIGINT},
          </if>
          <if test="sysTest.name != null">
             name = #{sysTest.name,jdbcType=VARCHAR}
          </if>
        </set>
    </sql>


    <sql id="Base_Insert_Selective">
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="sysTest.id != null">
               id,
            </if>
            <if test="sysTest.name != null">
               name
            </if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
             <if test="sysTest.id != null">
             #{sysTest.id,jdbcType=BIGINT},
             </if>
             <if test="sysTest.name != null">
             #{sysTest.name,jdbcType=VARCHAR}
             </if>
        </trim>
    </sql>



    <!--批量添加记录到数据库表中-->
    <insert id="batchInsert" parameterType="java.util.List">
        insert into sys_test
        <trim prefix="(" suffix=")" suffixOverrides=",">
             id,
             name
        </trim>
        values
        <foreach collection="list" index="index" item="item" separator=",">
            <trim prefix="(" suffix=")" suffixOverrides=",">
                #{item.id,jdbcType=BIGINT},
                #{item.name,jdbcType=VARCHAR}
            </trim>
        </foreach>
    </insert>



    <!-- 根据主键批量更新数据库表中的记录-->
    <update id="batchUpdate" parameterType="java.util.List">
        <foreach collection="list" index="index" item="item" separator=";">
            update sys_test
            <set>
                <trim suffixOverrides=",">
                    id = #{item.id,jdbcType=BIGINT},
                    name = #{item.name,jdbcType=VARCHAR}
                </trim>
            </set>
            <where>
                <trim suffixOverrides=",">
                    where id = #{item.id,jdbcType=BIGINT}
                </trim>
            </where>
        </foreach>
    </update>


    <!--存在即更新否则插入-->
    <update id="upsert" parameterType="com.xiaodao.entity.SysTest">
        insert into sys_test
        <trim prefix="(" suffix=")" suffixOverrides=",">
             id ,
             name 
        </trim>
        values
        <trim prefix="(" suffix=")" suffixOverrides=",">
             #{sysTest.id,jdbcType=BIGINT},
             #{sysTest.name,jdbcType=VARCHAR}
        </trim>
        on duplicate key update
        <trim suffixOverrides=",">
          #{sysTest.id,jdbcType=BIGINT},
          #{sysTest.name,jdbcType=VARCHAR}
        </trim>
    </update>


    <!--带有空值检查的存在即更新否则插入-->
    <update id="upsertSelective" parameterType="com.xiaodao.system.entity.SysTest">
        insert into sys_test
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="sysTest.id != null">
                id,
            </if>
            <if test="sysTest.name != null">
                name
            </if>
        </trim>
        values
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="sysTest.id !=null ">
                #{sysTest.id,jdbcType=BIGINT},
            </if>
            <if test="sysTest.name !=null ">
                #{sysTest.name,jdbcType=VARCHAR}
            </if>
        </trim>
        on duplicate key update
        <trim suffixOverrides=",">
            <if test="sysTest.id !=null ">
             #{id,jdbcType=BIGINT},
            </if>
            <if test="sysTest.name !=null ">
             #{name,jdbcType=VARCHAR}
            </if>
        </trim>
    </update>

    <select id="query" resultMap="BaseResultMap" parameterType="com.xiaodao.system.entity.SysTest">
        select
        <include refid="Base_Column_List"/>
        from sys_test
        <where>
            <include refid="Base_Query_Where"></include>
        </where>
    </select>

    <select id="queryTotalCount" resultType="long">
        select count(*) from sys_test
    </select>




</mapper>